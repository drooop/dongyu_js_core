{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MgmtBusEventV0",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "type", "op_id", "payload"],
  "properties": {
    "version": { "const": "v0" },
    "type": { "enum": ["ui_event", "snapshot_delta", "pin_out", "error"] },
    "op_id": { "type": "string", "minLength": 1 },
    "payload": { "type": "object" },
    "trace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "room_id": { "type": "string" },
        "event_id": { "type": "string" },
        "sender": { "type": "string" }
      }
    }
  }
}
